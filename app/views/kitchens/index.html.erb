<div class="top">
  <%# リクエスト一覧 %>
  <div class="request-contents">
    <h2 class="pick-up">IDEA</h2>
    <p class="message">詳細は画像をクリック</p>
    <ul class="request-list">
      <% @kitchens.each do |kitchen| %>
        <li class="list">
        <%# 画像 %>
          <%= link_to kitchen_path(kitchen.id) do %>
          <div class="img">
            <P><%= image_tag kitchen.image, class: "kitchen-img"%></P>
          <% end %>
          </div>
        <%# リクエストジャンル %>
          <div class="genre">
            <div class="genre-text">ジャンル</div>
             <div class="genre-name"><%= kitchen.genre.name %></div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>