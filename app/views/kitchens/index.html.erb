<div class="top">
<%= render "shared/header" %>

  <%# ↑↑↑ここまでを部分テンプレートにする↑↑↑ %>

  <%# リクエスト一覧 %>
  <div class="request-contents">
    <h2 class="pick-up">リクエスト一覧</P>
    <ul class="request-list">
      <% @kitchens.each do |kitchen| %>
        <li class="list">
        <%# 画像 %>
          <%= link_to kitchen_path(kitchen.id) do %>
          <div class="img">リクエスト画像
            <P><%= image_tag kitchen.image, class: "kitchen-img"%></P>
          <% end %>
          </div>
        <%# リクエストジャンル %>
          <div class="genre">リクエストジャンル：
            <%= kitchen.genre.name %>
          </div>
        <%# リクエスト名 %>
          <div class="name">リクエスト名：
            <%= kitchen.name %>
          </div>
      <% end %>
    </ul>
  </div>
</div>